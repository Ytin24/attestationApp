<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
			 x:Class="attestationApp.Views.TestView"
             d:DesignWidth="800" d:DesignHeight="600">
	<StackPanel Margin="20">
		<TextBlock Text="Please answer the following question:" FontSize="24" Margin="0,0,0,20"/>
		<TextBlock Text="{Binding CurrentQuestion.QuestionText}" FontSize="18" Margin="0,0,0,20"/>
		<ListBox ItemsSource="{Binding CurrentQuestion.Answers}" SelectedItem="{Binding SelectedAnswer}">
			<ListBox.ItemTemplate>
				<DataTemplate>
					<TextBlock Text="{Binding Text}"/>
				</DataTemplate>
			</ListBox.ItemTemplate>
		</ListBox>
		<Button Content="Submit Answer" Command="{Binding SubmitAnswerCommand}"/>
	</StackPanel>
</UserControl>
